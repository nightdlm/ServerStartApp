<Page x:Class="WpfAppAi.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppAi.Pages"
      xmlns:component="clr-namespace:WpfAppAi.Components"
      xmlns:model="clr-namespace:WpfAppAi.Model"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

        
            <!-- 用StackPanel垂直排列列表和按钮 -->
        <StackPanel Orientation="Vertical" Margin="15">

            <Button 
        Content="保存" 
        Height="35"
        Margin="0,0,0,20" 
        HorizontalAlignment="Stretch"
        Click="SaveAndExit_Click"
        Cursor="Hand"
        Padding="15,0"
        Background="#FF4A6FA5"
        Foreground="White"
        BorderThickness="0">
                <!-- 可选：添加鼠标悬停效果，提升交互体验 -->
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="0.9"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="Background" Value="#FF3A5F95"/>
                                <!-- 悬停时加深颜色 -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>



            <!-- 动态生成的控件列表 -->
            <ItemsControl ItemsSource="{Binding ItemList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <component:UserComponentItem Margin="0,0,0,10"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!-- 添加按钮（独占一行） -->
            <Button 
            Content="新增" 
            Height="35"
            Margin="0,15,0,0"
            HorizontalAlignment="Stretch"
            Click="Add_Click"
            Cursor="Hand"
            Padding="15,0"
            Background="#FF6B8E23" Foreground="White"
            BorderThickness="0" />

        </StackPanel>


    </ScrollViewer>
</Page>
