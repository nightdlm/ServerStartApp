<UserControl x:Class="WpfAppAi.Components.ToggleButtonComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppAi.Components"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="20" d:DesignWidth="40">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="100" Height="50">
                <ToggleButton x:Name="toggleButton" Click="ToggleButton_Click" Width="100" Height="50" Cursor="Hand">
                    <ToggleButton.Template>
                        <ControlTemplate>
                            <Grid>
                                <Border x:Name="backgroundBorder" Background="Green" CornerRadius="25"/>
                                <Border x:Name="sliderBorder" Background="White" Width="30" Height="30" 
                                        CornerRadius="15" Margin="60,10,10,10"/>
                            </Grid>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>