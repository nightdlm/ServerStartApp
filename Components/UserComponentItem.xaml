<UserControl x:Class="WpfAppAi.Components.UserComponentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppAi.Components"
             xmlns:model="clr-namespace:WpfAppAi.Model"
             xmlns:converters="clr-namespace:WpfAppAi.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="500"
             d:DataContext="{d:DesignInstance Type=model:Item}">
    <UserControl.Resources>
        <converters:BooleanToVisibleConverter x:Key="BooleanToVisibleConverter"/>
        <converters:BooleanNegationConverter x:Key="BooleanNegationConverter"/>
    </UserControl.Resources>
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1">
            <Grid>

                <Button Cursor="Hand" x:Name="UserConfigYes" Content="启用" HorizontalAlignment="Left" Margin="32,14,0,0" VerticalAlignment="Top" Width="55" Foreground="White" Background="#FF6DBB6E" Visibility="{Binding IsEnabled, Converter={StaticResource BooleanToVisibleConverter},ConverterParameter=inverse, Mode=TwoWay}" Click="UserConfigYes_Click"/>
                <Button Cursor="Hand" x:Name="UserConfigNo" Content="停用"  HorizontalAlignment="Left" Margin="33,14,0,0" VerticalAlignment="Top" Width="55" Foreground="White" Background="#FFEA765C" Visibility="{Binding IsEnabled, Converter={StaticResource BooleanToVisibleConverter}, Mode=TwoWay}" Click="UserConfigNo_Click"/>

                <Label Content="服务名：" HorizontalAlignment="Left" Margin="32,50,0,0" VerticalAlignment="Top" Width="81"/>
                <TextBox HorizontalAlignment="Left" Margin="124,50,0,0" TextWrapping="Wrap" Text="{Binding Key}" VerticalAlignment="Top" Width="272" Height="21"/>

                <Label Content="启动文件：" HorizontalAlignment="Left" Margin="32,83,0,0" VerticalAlignment="Top"/>
                <TextBox PreviewMouseLeftButtonDown="TextBox_MouseLeftButtonDown" HorizontalAlignment="Left" Margin="124,85,0,0" TextWrapping="Wrap" Text="{Binding FilePath}" VerticalAlignment="Top" Width="272" Height="auto" MinHeight="23" IsReadOnly="True"/>

                <Label Content="启动端口：" HorizontalAlignment="Left" Margin="31,113,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Port}" VerticalAlignment="Top" Width="272" Height="21" Margin="124,113,0,0"/>

                <Label Content="启动参数：" HorizontalAlignment="Left" Margin="31,149,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Margin="124,149,0,0" TextWrapping="Wrap" Text="{Binding Arg}" VerticalAlignment="Top" Width="272" Height="58" MinLines="4"/>

                <Label Content="等待退出：" HorizontalAlignment="Left" Margin="31,213,0,0" VerticalAlignment="Top"/>
                <RadioButton Foreground="Red" Content="是" HorizontalAlignment="Left" Margin="124,220,0,0" VerticalAlignment="Top" IsChecked="{Binding WaitForExit,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" GroupName="{Binding Key}"/>
                <RadioButton Foreground="#FF6DBB6E" Content="否" Margin="185,220,0,0" VerticalAlignment="Top" IsChecked="{Binding WaitForExit, Converter={StaticResource BooleanNegationConverter}, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" GroupName="{Binding Key}" HorizontalAlignment="Left" />

                <Image Cursor="Hand"  MouseLeftButtonDown="Remove_Click" HorizontalAlignment="Right" Height="18" Margin="0,20,10,0" VerticalAlignment="Top" Width="20" Source="/Resources/delete.png"/>
                <Button x:Name="DownMove" Content="下移" HorizontalAlignment="Right" Margin="0,14,43,0" VerticalAlignment="Top" Click="DownMove_Click" Width="50"/>
                <Button x:Name="UpMove" Content="上移" HorizontalAlignment="Right" Margin="0,14,107,0" VerticalAlignment="Top" Width="50" Click="UpMove_Click"/>

            </Grid>
        </Border>

    </Grid>
</UserControl>
