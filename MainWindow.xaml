<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAi"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        x:Class="WpfAppAi.MainWindow"
        mc:Ignorable="d"
        Title="服务管理AI" Height="450" Width="800" MinHeight="450" MinWidth="800" Icon="/Resources/logo.png" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- 定义两列布局 -->
        <Grid.ColumnDefinitions>
            <!-- 左侧Menu列：固定宽度200 -->
            <ColumnDefinition Width="80"/>
            <!-- 右侧Frame列：占据剩余空间 -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Menu>
            <MenuItem Cursor="Hand" Header="服务管理" Click="ServiceManagement_Click" Width="80"/>
            <MenuItem Cursor="Hand" Header="服务状态" Click="ServiceStatus_Click" Width="80"/>
            <MenuItem Cursor="Hand" Header="系统设置" Click="SystemSettings_Click" Width="80"/>
        </Menu>

        <!-- 右侧Frame容器 -->
        <Frame Grid.Column="1" x:Name="MainFrame" 
               NavigationUIVisibility="Hidden"
            Margin="5"/>
    </Grid>
</Window>
