<?xml version="1.0" encoding="utf-8" ?>
<Items>
	<Item>
		<IsEnabled>true</IsEnabled>
		<Key>CacheServer</Key>
		<FilePath>Server\redis\redis-server.exe</FilePath>
		<Port>6390</Port>
		<Arg>Server\redis\redis.windows-service.conf</Arg>
		<WaitForExit>false</WaitForExit>
	</Item>

	<Item>
		<IsEnabled>true</IsEnabled>
		<Key>InitServer</Key>
		<FilePath>Server\mysql\bin\mysqld.exe</FilePath>
		<Arg>--initialize-insecure --init-file=..\sql\init.sql --console</Arg>
		<WaitForExit>true</WaitForExit>
	</Item>

	<Item>
		<IsEnabled>true</IsEnabled>
		<Key>StorageServer</Key>
		<FilePath>Server\mysql\bin\mysqld.exe</FilePath>
		<Port>3309</Port>
		<Arg>--console</Arg>
		<WaitForExit>false</WaitForExit>
	
</Item>

	<Item>
		<IsEnabled>true</IsEnabled>
		<Key>WebServer</Key>
		<FilePath>Server\jdk\bin\java.exe</FilePath>
		<Port>11025</Port>
		<Arg>-jar Server\app\app.jar --spring.config.location=Server\app\application.yml</Arg>
		<WaitForExit>false</WaitForExit>
	
</Item>

	<Item>
		<IsEnabled>true</IsEnabled>
		<Key>NginxServer</Key>
		<FilePath>Server\nginx\nginx.exe</FilePath>
		<Arg>-p Server\nginx\</Arg>
		<Port>11010</Port>
		<WaitForExit>false</WaitForExit>
	
</Item>
	<Item>
		<IsEnabled>true</IsEnabled>
		<Key>HtmlSever</Key>
		<FilePath>cmd.exe</FilePath>
		<Arg>/c start http://127.0.0.1:11010</Arg>
		<WaitForExit>false</WaitForExit>

	</Item>
</Items>


