<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAi"
        xmlns:component="clr-namespace:WpfAppAi.Components"
        xmlns:model="clr-namespace:WpfAppAi.Model"
        x:Class="WpfAppAi.Setting"
        mc:Ignorable="d"
        Title="设置" Height="450" Width="800" x:Name="SettingPage" Icon="/Resources/setting.png" WindowStartupLocation="CenterOwner" Cursor="">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <!-- 用StackPanel垂直排列列表和按钮 -->
            <StackPanel Orientation="Vertical">
                <!-- 动态生成的控件列表 -->
                <ItemsControl ItemsSource="{Binding ItemList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <component:UserComponentItem Margin="0,0,0,10"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- 添加按钮（独占一行） -->
                <Button 
                    Content="添加" 
                    Height="35"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Left"
                    Click="Add_Click"
                    Cursor="Hand"
                    Padding="15,0"
                    Background="#FF6B8E23" Foreground="White"
                    BorderThickness="0" Width="802"/>
            </StackPanel>


        </ScrollViewer>
    </Grid>
</Window>
