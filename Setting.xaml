<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAi"
        xmlns:component="clr-namespace:WpfAppAi.Components"
        xmlns:model="clr-namespace:WpfAppAi.Model"
        x:Class="WpfAppAi.Setting"
        mc:Ignorable="d"
        Title="设置" Height="450" Width="800" x:Name="SettingPage" Icon="/Resources/setting.png" WindowStartupLocation="CenterOwner" Background="#FFDED2D2">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <!-- 使用ItemsControl动态生成控件 -->
            <ItemsControl ItemsSource="{Binding ItemList}">
                <!-- 定义每个Item的呈现方式 -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- 绑定到单个Item对象 -->
                        <component:UserComponentItem  Margin="0,0,0,10"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!-- 可选：设置垂直布局 -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
